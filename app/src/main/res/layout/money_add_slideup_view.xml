<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom">
    <LinearLayout
        android:id="@+id/slideView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_up_corners_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/inputMoneyTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="액수:"
                android:paddingRight="30dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/inputMoneyET"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>

            <Spinner
                android:id="@+id/inputMoneySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/inputMoneyType"
                android:background="#DDDDDD"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/reasonTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목:"
                android:paddingRight="30dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/titleMoneyET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/descTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내용:"
                android:paddingRight="30dp"
                android:textColor="#000000"/>

            <EditText
                android:id="@+id/descET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <RadioGroup
            android:id="@+id/moneyChangeSignRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <RadioButton
                android:id="@+id/incomeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(+) 수입"
                android:paddingRight="70dp"/>
            <RadioButton
                android:id="@+id/spentRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(-) 지출"/>
        </RadioGroup>
        <Button
            android:id="@+id/confirmBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="확인"
            android:textSize="18dp"
            android:background="#28BAA9"/>
    </LinearLayout>
</LinearLayout>